<% if book.errors.any? %>
  <div class = "error_alert">
    <% if book.errors.count > 1 %>
      <p class="error_sentence"><%= "#{book.errors.count} errors prohibited this book from being saved:" %></p>
    <% else %>
      <p class="error_sentence"><%= "#{book.errors.count} error prohibited this book from being saved:" %></p>
    <% end %>
    <ul class="error_list">
      <% book.errors.full_messages.each do |message| %>
        <li class="error_list_element"><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
