<h1>Editing Book</h1>
<%= render 'layouts/error_form', book: @editted_book %>
<%= form_with model:@book , local:true do |f| %>  <!-- ミスってremote:true do になってた、こんなこともあるから全て確認すること！！-->
<p>Title</p>
<%= f.text_field :title %>
<p>Body</p>
<%= f.text_area :body %>
<p><%= f.submit 'Update Book' %></p>
<% end %>

<p class="left"><%= link_to 'Show',book_path(@book.id) %></p>
<p class="right"><%= link_to "back" , books_path %></p>